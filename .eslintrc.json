{
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    // Add custom rules here
    "no-unused-vars": "warn",
    "no-console": "warn",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "ignoredNodes": ["JSXElement *"]
      }
    ],
    "react/jsx-indent": ["error", 2],
    "react/jsx-indent-props": ["error", 2]
  },
  "settings": {
    "next": {
      "rootDir": ["apps/*/"]
    }
  }
}
